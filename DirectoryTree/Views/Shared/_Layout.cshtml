<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewData["Title"]</title>    
    <link href="~/Content/css/adminlte.min.css" rel="stylesheet" />
    <link href="~/Content/css/all.min.css" rel="stylesheet" />    
    <link href="~/Content/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/Content/css/site.css" rel="stylesheet" />
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Content/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/js/jquery.dataTables.js"></script>
    <script src="~/Content/js/dataTables.bootstrap4.js"></script>
    <script src="~/Content/js/adminlte.min.js"></script>
    <script src="~/Content/js/demo.js"></script>

</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                </li>
            </ul>
            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link" data-toggle="dropdown" href="#">
                            @User.Identity.Name
                        </a>
                        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                            <div class="dropdown-divider"></div>
                            <a class="nav-link" href="@Url.Action("Logoff", "Account")">
                                <i class="fas fa-sign-out-alt mr-2"></i>
                                Выход
                            </a>
                        </div>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a asp-controller="Account" asp-action="Login">Вход</a>
                    </li>
                }
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->            
            <a class="brand-link" href="@Url.Action("Index", "Home")">
                <img src="~/Content/img/logo.png" alt="logo" class="brand-image" style="opacity: .8">               
                <span class="brand-text font-weight-light">NLMK ENGINEERING</span>               
            </a>
            <!-- Sidebar -->
            <div class="sidebar">                
                <nav class="mt-2">                    
                    @Html.Action("Menu", "Home")                   
                </nav>
            </div>            
        </aside>        
        <div class="content-wrapper">
            @RenderBody()
        </div>        
        <aside class="control-sidebar control-sidebar-dark">           
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>        
        <footer class="main-footer">           
            <div class="float-right d-none d-sm-inline">
                Anything you want
            </div>            
            <strong>Copyright &copy; @DateTime.Now.Year <a href="https://engineering.nlmk.com">NLMK ENGINEERING</a>.</strong> All rights reserved.
        </footer>
    </div>
</body>
</html>
