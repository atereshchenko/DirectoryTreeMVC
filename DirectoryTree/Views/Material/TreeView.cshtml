
@{
    ViewBag.Title = "Дерево каталогов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="../../Content/css/site.css" rel="stylesheet" />
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Дерево материалов</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Главная</a></li>
                    <li class="breadcrumb-item active">Каталог материалов</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-lg-2">
                                <h5 class="card-title">Перечень материалов</h5>
                            </div>
                            <div class="col-lg-10">
                                @using (Html.BeginForm("USearch", "Material", FormMethod.Post))
                                {
                                    <div class="input-group input-group-sm">

                                        <input type="text" name="filter" class="form-control form-control-navbar" value="@ViewBag.filter" placeholder="Введите Название материала, Код производителя, Номер ОЗМ или Нормативный документ для поиска" />
                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                                        </div>
                                    </div>
                                }
                            </div>                            
                        </div>
                    </div>
                    <div class="card-body">
                        @Html.Action("Catalog", "Material")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>