@{
    ViewBag.Title = "Поиск материала";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //file:///C:/Users/tereschenko_aa/Documents/Projects/NlmkEngineering/DirectoryTreeMVC_v1.0.4.9/DirectoryTree/AdminLTE-master/pages/mailbox/read-mail.html#
}
<script>
    $(function () {
        $("#example2").DataTable({
            "order": [[2, "asc"]],
            "displayLength": 25,
            "searching": false,
            "language": {
                "url": "/Content/js/RussianDataTables.json"
            }
        });
    });
</script>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Поиск</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Главная</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("TreeView", "Material")">Каталог материалов</a></li>
                    <li class="breadcrumb-item">Поиск материала</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<div class="col-md-12">
    <div class="card card-primary card-outline table-responsive p-0">
        @using (Html.BeginForm())
        {
            <div class="card-header">
                <div class="input-group input-group-sm">

                    <input type="text" name="filter" class="form-control form-control-navbar" value="@ViewBag.filter" placeholder="Введите Название материала, Код производителя, Номер ОЗМ или Нормативный документ для поиска" />
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                    </div>
                </div>
            </div>
        <!-- /.card-header -->
            <div class="card-body p-0">
                <div class="mailbox-read-info">
                    <table class="table table-sm table-hover" id="example2">
                        <thead>
                            <tr>
                                <th style="width:100px;">№</th>
                                <th style="width:100px">№ ОЗМ</th>
                                <th>Наименование</th>
                                <th style="width: 250px;">Тип/марка/чертеж</th>                  
                                <th style="width:150px">Код произ.</th>
                                <th style="width: 250px;">Нормативный док.</th>
                            </tr>
                        </thead>
                        <tbody>
                            @Html.Action("GetMaterialSearch")
                        </tbody>
                    </table>
                </div>
            </div>       
        }
    </div>
</div>
<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>